<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"

    app:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:id="@+id/cyc"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cId"
            android:text="Cycle ID:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cyc"

            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cid"
            android:text="cycleId"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cyc"

            android:layout_marginLeft="110dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Empid"
            android:text="Employee Id:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_below="@+id/cid"
            android:layout_toRightOf="@+id/cyc"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Emp_id"
            android:text="@string/employee_id"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_below="@+id/cid"
            android:layout_toRightOf="@+id/cyc"
            android:layout_marginLeft="110dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:text="Duration"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_below="@+id/Emp_id"
            android:layout_toRightOf="@+id/cyc"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@id/damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duration"
            android:layout_toRightOf="@+id/cyc"
             android:text="Damaged"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@+id/approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duration"
            android:layout_toRightOf="@+id/damage"
            android:text="Approved"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>